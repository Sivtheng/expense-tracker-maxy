<%= stylesheet_link_tag 'login', media: 'all', 'data-turbo-track': 'reload' %>

<%= form_with url: login_path, local: true do |form| %>

<div class="login-container">
  <div class="login-box">
    <h2>Login</h2>

    <!-- Display flash messages for errors -->
    <% if flash[:alert] %>
      <div class="alert">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- Login form -->
    <%= form_with(url: login_path, method: :post, local: true, class: 'login-form') do |f| %>
      <div class="form-group">
        <%= f.label :name, "Username" %>
        <%= f.text_field :name, placeholder: '.....', class: 'input-field' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, placeholder: '.....', class: 'input-field' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Log In', class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>
<% end %>
  

  