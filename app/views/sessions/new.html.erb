<%= stylesheet_link_tag 'login', media: 'all', 'data-turbo-track': 'reload' %>

<div class="login-container">
  <div class="login-box">
    <h2>Login</h2>

    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= form_with(url: login_path, method: :post, local: true, class: 'login-form') do |f| %>
      <div class="form-group">
        <%= f.label :name, "Username", class: 'form-label' %>
        <%= f.text_field :name, placeholder: 'Enter your username', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Password", class: 'form-label' %>
        <%= f.password_field :password, placeholder: 'Enter your password', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit 'Log In', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>