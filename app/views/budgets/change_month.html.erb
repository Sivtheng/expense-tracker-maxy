<%= stylesheet_link_tag 'month-budget', media: 'all', 'data-turbo-track': 'reload' %>

<div class="expense-container">
  <div class="expense-box">
    <h1>Change Month</h1>
    <%= form_with url: update_month_path, method: :post, local: true do %>
      <div class="form-group">
        <%= label_tag :year, "Select Year", class: 'form-label' %>
        <%= select_tag :year, options_for_select(@years, Date.today.year), class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :month, "Select Month", class: 'form-label' %>
        <%= select_tag :month, options_for_select((1..12).map { |m| [Date::MONTHNAMES[m], m] }), class: 'form-control' %>
      </div>
      <%= submit_tag "Change Month", class: 'btn-primary' %>
    <% end %>

    <%= link_to 'Back', expenses_path(year: @month, month: @year), class: 'link-back' %>
  </div>
</div>
