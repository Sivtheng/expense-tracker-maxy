<h1>Expenses</h1>

<%= link_to 'New Expense', new_expense_path %>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.date %></td>
        <td><%= expense.category.name %></td>
        <td>
          <%= link_to 'Show', expense_path(expense) %> |
          <%= link_to 'Edit', edit_expense_path(expense) %> |
          <%= link_to 'Destroy', expense_path(expense), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
